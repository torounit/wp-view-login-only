    "require": {},
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.9",
        "wp-coding-standards/wpcs": "^0.11"
    },
    "scripts": {
        "post-install-cmd": [
            "php vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/"
        ],
        "post-update-cmd": [
            "php vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/"
        ],
        "phpcs": [
            "php vendor/bin/phpcs -p -s -v . --standard=./phpcs.xml --extensions=php"
        ]
    }
}
